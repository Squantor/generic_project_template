  "tasks": [
    {
      "label": "build LPC812 empty project",
      "type": "shell",
      "command": "make PROJECT=LPC812 -j20",
      "group": "build",
      "problemMatcher": "$gcc"
    },
    {
      "label": "build LPC812 nuclone blinky project",
      "type": "shell",
      "command": "make PROJECT=LPC812M101DH20_blinky -j20",
      "group": "build",
      "problemMatcher": "$gcc"
    },
    {
      "label": "build LPC824 empty project",
      "type": "shell",
      "command": "make PROJECT=LPC824 -j20",
      "group": "build",
      "problemMatcher": "$gcc"
    },
    {
      "label": "build PC example",
