{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "debug LPC824 example debug mode",
            "cwd": "${workspaceRoot}",
            "executable": "${workspaceFolder}/bin/LPC824/debug/LPC824.elf",
            "request": "attach",
            "type": "cortex-debug",
            "servertype": "bmp",
            "interface": "swd",
            "device": "LPC824",
            "BMPGDBSerialPort": "/dev/ttyACM0",
            "runToMain": true,
            "preLaunchCommands": [],
            "preRestartCommands": [
                "set print pretty on",
                "file bin/LPC824/debug/LPC824.elf",
                "monitor tpwr enable",
                "shell sleep 1",
                "monitor swdp_scan",
                "attach 1",
                "set mem inaccessible-by-default off",
                "set {int}0x40048000 = 2",
                "load bin/LPC824/debug/LPC824.elf",
                "set {int}0x40048000 = 2",
                "compare-sections",
                "b main",
            ],
            "preLaunchTask": "build LPC824 example",
            "svdFile": "${workspaceFolder}/libMcuLL/svd/nxp/LPC824.svd"
        },
        {
            "name": "(gdb) Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/PC/debug/PC.elf",
            "args": [],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build PC example",
        },
    ]
}