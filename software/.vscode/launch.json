    "version": "0.2.0",
    "configurations": [
          {
            "name": "Debug debug LPC812 empty",
            "cwd": "${workspaceRoot}",
            "executable": "${workspaceFolder}/bin/LPC812/debug/LPC812.elf",
            "request": "launch",
            "type": "cortex-debug",
            "servertype": "bmp",
            "interface": "swd",
            "targetId": 1,
            "device": "LPC812",
            "BMPGDBSerialPort": "/dev/ttyACM0",
            "runToEntryPoint": "main",
            "preLaunchCommands": [],
            "postLaunchCommands": ["set {int}0x40048000 = 2","compare-sections"],
            "preRestartCommands": [],
            "preLaunchTask": "build LPC812 empty project",
            "svdFile": "${workspaceFolder}/libMcuLL/svd/nxp/LPC812.svd",
        },
        {
            "name": "(gdb) Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/PC/debug/PC.elf",
            "args": [],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build PC example",
        },
    ]
}